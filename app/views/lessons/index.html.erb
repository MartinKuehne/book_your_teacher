<main>

<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <%= form_tag lessons_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search for a lesson or for your favorite TA"
        %>
        <%= submit_tag "Search", class: "btn-submit" %>
      <% end %>
    </div>
  </div>
</section>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-3">
        <% @lessons.each do |lesson| %>
          <div class="col">
            <div class="card shadow-sm">
              <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="https://source.unsplash.com/wpU4veNGnHg/450x300/" alt="">
              <div class="card-body">
                <div class="d-flex justify-content-between">
                  <p class="card-title"><strong><%= lesson.name %></strong>
                  <p>
                    <% lesson.rating_average.times do %>
                      <i class="fas fa-star"></i>
                    <% end %>
                  </p>
                </div>
                <p class="card-text"><%= lesson.description %> </p>

                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted"><%= lesson.price %>â‚¬ per hour</small>
                  <small class="text-muted">By <%= lesson.user.first_name %></small>
                </div>
                <%= link_to  'View', lesson_path(lesson),class: 'btn btn-primary btn-sm btn-block stretched-link mt-3 link-light' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
