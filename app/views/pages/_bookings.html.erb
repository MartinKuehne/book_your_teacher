
   <div class="d-flex flex-wrap justify-content-around">
    <% @bookings.each do |booking| %>
      <div class="card m-3" style="width: 70vw;">
        <div class="card-body">
          <h5 class="card-title"><%= link_to booking.lesson.name, lesson_path(booking.lesson), class: 'link-dark' %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Teacher: <%= booking.lesson.user.first_name %> <%= booking.lesson.user.last_name %> </h6>
          <p class="card-text"> 
            From: <%= booking.start_time.strftime("%F") %> <%= booking.start_time.strftime("at %I:%M%p") %> <br> 
            To: <%= booking.end_time.strftime("%F") %> <%= booking.end_time.strftime("at %I:%M%p") %> <br>
            Location: <%= booking.lesson.user.location %> </p>
          </p>
          <div class="btn btn-primary"><%= booking.status.capitalize %> </div>
          <div class="btn btn-warning"><%= link_to  "Leave a review", new_review_path(@review), class: 'line-dark' %></div>
        </div>
      </div>
    <% end %>
  </div>