<div class="container">
  <div class="row">
    <% @lessons.each do |lesson| %>
      <%= link_to lesson.name, lesson_path(lesson) %>
      <% lesson.bookings.each do |booking| %>
        <h3><%= booking.user.first_name %> <%= booking.user.last_name %></h3>
        <p><%= booking.start_time %> - <%= booking.end_time %></p>
        <div class="status">
          <p><%= booking.status %></p>
          <% if current_user.lessons.include? @lesson %>
            <%= link_to "Accept", root_path, notice: "Lesson accepted" %>
            <%= link_to "Reject", root_path, notice: "Lesson rejected" %>
          <% end %>
          <% if booking.status == "Rejected" %>
            <%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
