<div class="container">

  <div class="text-center">
  <h1>Dashboard</h1>
  </div>

  <div class="row">
    <% @lessons.each do |lesson| %>
    <div class="container">
      <h3><%= link_to lesson.name, lesson_path(lesson) %></h3>
      <p><%= lesson.description %> </p>
      <h5>Bookings: </h5>
      <div class="container">
      <% if lesson.bookings.nil? %>
        <p>No bookings yet.</p>
      <% else %>
      <% lesson.bookings.each do |booking| %>
        <h6>User: <strong> <%= booking.user.first_name %> <%= booking.user.last_name %></strong></h6>
        <p>Time: <%= booking.start_time %> - <%= booking.end_time %> <br>
        Status: <u><%= booking.status %></u></p>
        <%= link_to  "Accept", lessons_path, class: "btn btn-primary btn-sm mb-3" %>
        <%= link_to  "Reject", lessons_path, class: "btn btn-danger btn-sm mb-3" %>
          <% if booking.status == "Rejected" %>
            <%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
      <% end %>
      <% end %>
      </div>
      <p>_____________________________________________________________________________</p>
      </div>
    <% end %>
  </div>
</div>
