
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/9OGNpJPVMZ8/1600x900);">
  <div class="container">
    <h1 class="m-3 text-center">Find your next teacher</h1>
    <p class="text-center mb-5" >Join now for exclusive access to the worlds best teachers and mentors.</p>
    <%= form_tag lessons_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a lesson"
      %>
      <%= submit_tag "Search", class: "btn btn-primary btn-lg mt-3" %>
    <% end %>
    <br>
    <%= link_to  "Browse all lessons", lessons_path, class: 'btn btn-primary btn-lg' %>
  </div>
  </div>
</div>